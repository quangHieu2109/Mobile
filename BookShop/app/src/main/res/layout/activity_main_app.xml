<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#191A21"
    tools:context="view.activity.MainApp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:adjustViewBounds="true"
        android:src="@drawable/book_img" />

    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Welcome to BookShop"
            android:textSize="24sp" />
    </LinearLayout>
    <TextView
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="The number one best book shop"/>
    <Button
        android:paddingLeft="45dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/icon_gg"
        android:textSize="20sp"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#1F232B"
        android:text="Continute with Google"/>

    <Button
        android:id="@+id/getStarted"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="#F99200"
        android:layout_marginVertical="10dp"
        android:text="Get Started"/>
    <Button
        android:id="@+id/login"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="20sp"
        android:text="I Already have an account"
        android:layout_width="match_parent"
        android:backgroundTint="#34393F"
        android:layout_height="70dp"/>

</LinearLayout>