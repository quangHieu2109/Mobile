<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191A21"
    tools:context="view.fragment.FragmentDiscover">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">
        <LinearLayout

            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_come"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Discover"
                android:textColor="#FFF"
                android:textSize="28sp" />

            <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <ImageButton
                    android:id="@+id/btn_search"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/ic_search" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginVertical="20dp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Charts"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_top_charts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginVertical="20dp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Selling"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_top_selling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginVertical="20dp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Release"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_top_new_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>