<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>
    <style name="DialogError" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/red</item>
        <item name="android:gravity">center</item>
        <item name="colorAccent">@color/red</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="DialogSuccess" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/green</item>
        <item name="android:gravity">center</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="WhiteColor" parent="Widget.AppCompat.Spinner">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:spinnerItemStyle">@style/CustomSpinnerTextAppearance</item>
        <item name="android:spinnerDropDownItemStyle">@style/CustomSpinnerTextAppearance</item>

    </style>
    <style name="CustomSpinnerTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CustomSpinnerTheme" parent="Widget.AppCompat.Spinner">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:popupBackground">?attr/colorSurface</item>
    </style>
</resources>